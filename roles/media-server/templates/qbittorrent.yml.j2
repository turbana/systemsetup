services:
  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:latest
    container_name: qbittorrent
    security_opt:
      - no-new-privileges:true
    restart: unless-stopped
    # profiles: ["apps", "all"]
    network_mode: "service:gluetun"
    volumes:
      - {{ docker_app_root }}/qbittorrent/config:/config
      - {{ media_download_root }}:/media/downloads
    environment:
      PGID: 1001
      WEBUI_PORT: {{ docker_services.qbittorrent.port }}
      UMASK_SET: "002"
      DOCKER_HOST: tcp://socket-proxy:{{ docker_services.socket_proxy.port }}
    labels:
      - homepage.group=Downloaders
      - homepage.name=qBittorrent
      - homepage.href={{ media_server_href }}:{{ docker_services.qbittorrent.port }}/
      - homepage.description=Torrent downloader
